<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:layout_marginTop="40dp">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.30"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="@string/beneficiary"
        android:id="@+id/Us"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#E0F7FA"
        android:textColorHint="#3F51B5"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Spinner
        android:layout_width="0dp"
        android:layout_weight="0.70"
        android:layout_height="50dp"
        android:inputType="textAutoComplete"
        android:ems="10"
        android:hint="@string/govtschemebeneficiary"
        android:id="@+id/sp1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_centerHorizontal="true"
        android:background="#E0F7FA"
        android:textColorHint="#3F51B5"
        android:textAlignment="center"
        android:entries="@array/beneficiaries"/>


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="@string/schemename"
            android:id="@+id/Us1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="#E0F7FA"
            android:textColorHint="#3F51B5"
            android:textAlignment="center"
            android:editable="false"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.60"
            android:layout_height="50dp"
            android:inputType="textAutoComplete"
            android:ems="10"
            android:hint="@string/govtschemename"
            android:id="@+id/et1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_centerHorizontal="true"
            android:background="#E0F7FA"
            android:textColorHint="#3F51B5"
            android:textAlignment="center" />

        <ImageButton
            android:id="@+id/mic12"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="50dp"
            android:src="@drawable/mic"
            android:scaleType="fitXY"
            android:layout_gravity="center"/>
    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:weightSum="1">

    <EditText
        android:layout_width="0dp"
        android:layout_weight="0.30"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="@string/startscheme"
        android:id="@+id/Us2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#E0F7FA"
        android:textColorHint="#3F51B5"
        android:textAlignment="center"
        android:textStyle="bold"
        android:editable="false"/>

    <EditText
        android:layout_width="0dp"
        android:layout_weight="0.55"
        android:layout_height="50dp"
        android:inputType="textAutoComplete"
        android:ems="10"
        android:hint="@string/govtschemestartdate"
        android:id="@+id/start"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_centerHorizontal="true"
        android:background="#E0F7FA"
        android:textColorHint="#3F51B5"
        android:textAlignment="center" />


    <ImageButton
        android:id="@+id/calendaricon"
        android:layout_width="0dp"
        android:layout_weight="0.15"
        android:layout_height="50dp"
        android:src="@drawable/calendar"
        android:scaleType="fitXY"
        android:layout_gravity="center"/>
</LinearLayout>




<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/pick_contacts"
    android:id="@+id/pick11"
    android:ems="10"
    android:layout_marginTop="50dp"
    android:textColor="#ffffff"
    android:background="#e68652" />

</LinearLayout>